* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #333;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 20px;
}

.container {
    width: 100%;
    max-width: 600px;
    display: flex;
    flex-direction: column;
    gap: 20px;
}

#download_dev {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    animation: slideUp 0.5s ease-out;
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.header {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    margin-bottom: 10px;
}

.logo {
    color: #FF0000;
    filter: drop-shadow(0 2px 4px rgba(255, 0, 0, 0.3));
}

h1 {
    color: #2c3e50;
    font-size: 28px;
    font-weight: 700;
    text-align: center;
}

.subtitle {
    text-align: center;
    color: #7f8c8d;
    font-size: 14px;
    margin-bottom: 30px;
}

.input-group {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
    flex-wrap: wrap;
}

#videoURL {
    flex: 1;
    min-width: 250px;
    padding: 15px 20px;
    font-size: 16px;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    outline: none;
    transition: all 0.3s ease;
    font-family: inherit;
}

#videoURL:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
}

#videoURL::placeholder {
    color: #bdc3c7;
}

#downloadBtn {
    display: flex;
    align-items: center;
    gap: 8px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 15px 30px;
    border: none;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    font-family: inherit;
}

#downloadBtn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
}

#downloadBtn:active:not(:disabled) {
    transform: translateY(0);
}

#downloadBtn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.btn-icon {
    flex-shrink: 0;
}

#message {
    min-height: 24px;
    padding: 12px 16px;
    border-radius: 10px;
    font-size: 14px;
    line-height: 1.5;
    margin-bottom: 10px;
    animation: fadeIn 0.3s ease-out;
    display: none;
}

#message:not(:empty) {
    display: block;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

#message.error {
    background-color: #fee;
    color: #c33;
    border-left: 4px solid #c33;
}

#message.success {
    background-color: #efe;
    color: #3c3;
    border-left: 4px solid #3c3;
}

#message.info {
    background-color: #e3f2fd;
    color: #1976d2;
    border-left: 4px solid #1976d2;
}

#message.warning {
    background-color: #fff3e0;
    color: #f57c00;
    border-left: 4px solid #f57c00;
}

.features {
    display: flex;
    justify-content: space-around;
    gap: 15px;
    margin-top: 30px;
    padding-top: 20px;
    border-top: 1px solid #e0e0e0;
    flex-wrap: wrap;
}

.feature {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #5f6368;
    font-size: 14px;
}

.feature svg {
    color: #667eea;
    flex-shrink: 0;
}

footer {
    text-align: center;
    color: rgba(255, 255, 255, 0.9);
    font-size: 13px;
    padding: 15px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    backdrop-filter: blur(10px);
}

/* Search Section */
.search-section {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 30px;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
}

.search-section h2,
.library-section h2 {
    display: flex;
    align-items: center;
    gap: 10px;
    color: #2c3e50;
    font-size: 22px;
    margin-bottom: 20px;
}

.search-section h2 svg,
.library-section h2 svg {
    color: #667eea;
}

.search-results {
    display: flex;
    flex-direction: column;
    gap: 15px;
    margin-top: 20px;
}

.search-result-card {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 15px;
    background: #f8f9fa;
    border-radius: 12px;
    transition: all 0.3s ease;
}

.search-result-card:hover {
    background: #e9ecef;
    transform: translateX(5px);
}

.result-thumbnail {
    width: 120px;
    height: 90px;
    object-fit: cover;
    border-radius: 8px;
    flex-shrink: 0;
}

.result-info {
    flex: 1;
}

.result-title {
    font-size: 16px;
    color: #2c3e50;
    margin-bottom: 5px;
    font-weight: 600;
}

.result-meta {
    font-size: 13px;
    color: #7f8c8d;
}

.add-to-library-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 8px;
    padding: 10px 15px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.add-to-library-btn:hover:not(:disabled) {
    transform: scale(1.05);
}

.add-to-library-btn:disabled {
    background: #95a5a6;
    cursor: not-allowed;
}

.no-results {
    text-align: center;
    color: #7f8c8d;
    padding: 30px;
    font-size: 14px;
}

/* Library Section */
.library-section {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 30px;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
}

.library-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
    margin-top: 20px;
}

.library-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
}

.library-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

.card-thumbnail {
    position: relative;
    width: 100%;
    height: 160px;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
}

.play-btn {
    background: rgba(0, 0, 0, 0.6);
    border: none;
    border-radius: 50%;
    width: 60px;
    height: 60px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
}

.card-thumbnail:hover .play-btn {
    opacity: 1;
}

.play-btn:hover {
    background: rgba(0, 0, 0, 0.8);
    transform: scale(1.1);
}

.card-content {
    padding: 15px;
}

.card-title {
    font-size: 15px;
    color: #2c3e50;
    margin-bottom: 8px;
    font-weight: 600;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.card-date {
    font-size: 12px;
    color: #7f8c8d;
    margin-bottom: 12px;
}

.card-actions {
    display: flex;
    gap: 8px;
}

.download-video-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 13px;
    cursor: pointer;
    transition: all 0.3s ease;
    flex: 1;
    justify-content: center;
}

.download-video-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

.remove-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    background: #e74c3c;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 13px;
    cursor: pointer;
    transition: all 0.3s ease;
    flex: 1;
    justify-content: center;
}

.remove-btn:hover {
    background: #c0392b;
}

.no-videos {
    text-align: center;
    color: #7f8c8d;
    padding: 40px;
    font-size: 15px;
    grid-column: 1 / -1;
}

/* Video Player Modal */
.player-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
}

.player-container.active {
    opacity: 1;
    visibility: visible;
}

.player-container.minimized .player-wrapper {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 400px;
    height: 225px;
    max-width: 90vw;
}

.player-wrapper {
    position: relative;
    width: 90%;
    max-width: 1200px;
    aspect-ratio: 16 / 9;
    background: #000;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    transition: all 0.3s ease;
}

.player-controls {
    position: absolute;
    top: 10px;
    right: 10px;
    display: flex;
    gap: 10px;
    z-index: 10;
}

.close-player,
.minimize-player {
    background: rgba(0, 0, 0, 0.6);
    color: white;
    border: none;
    border-radius: 50%;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
}

.close-player:hover,
.minimize-player:hover {
    background: rgba(255, 255, 255, 0.2);
}

.close-player:hover {
    transform: rotate(90deg);
}

#videoPlayer {
    display: block;
}


/* Responsive Design */
@media (max-width: 600px) {

    #download_dev,
    .search-section,
    .library-section {
        padding: 25px 20px;
    }

    h1 {
        font-size: 24px;
    }

    .input-group {
        flex-direction: column;
    }

    #videoURL,
    #downloadBtn,
    #searchQuery,
    #searchBtn {
        width: 100%;
    }

    .features {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
    }

    .search-result-card {
        flex-direction: column;
        align-items: flex-start;
    }

    .result-thumbnail {
        width: 100%;
        height: 180px;
    }

    .library-grid {
        grid-template-columns: 1fr;
    }

    .player-wrapper {
        width: 95%;
    }

    .close-player {
        top: 10px;
        right: 10px;
    }
}

/* Loading Animation */
@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

#downloadBtn:disabled .btn-icon {
    animation: spin 1s linear infinite;
}